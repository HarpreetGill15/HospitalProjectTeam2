@model HospitalProject.Models.PatientsRegistration
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/PatientsRegistration/List">Back</a>

<a href="/PatientsRegistration/Edit">Edit</a>

<h2>Details of patient @Model.firstname @Model.lastname</h2>
<!-- Displaying details of patient in a table-->
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">PostalCode</th>
            <th scope="col">Gender</th>
            <th scope="col">Phone</th>
            <th scope="col">DOB</th>
            <th scope="col">Emeregency Contact</th>
            <th scope="col">Emergency Number</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.firstname @Model.lastname</td>
            <td>@Model.email</td>
            <td>@Model.address</td>
            <td>@Model.city</td>
            <td>@Model.postalcode</td>
            <td>@Model.gender</td>
            <td>@Model.phone</td>
            <td>@Model.dob</td>
            <td>@Model.emergencycontactname</td>
            <td>@Model.emergencycontactnumber</td>
        </tr>
    </tbody>
</table>



