@model HospitalProject.Models.PatientsRegistration
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a href="/PatientsRegistration/List">Back</a>
<!--Displaying in heading, of which patient to update records with patient full name-->
<h2>Edit Details of patient @Model.firstname @Model.lastname</h2>

<!-- Displaying previously added data in the respective fields using models-->
<form method="post" action="/PatientsRegistration/Edit/@Model.id">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Firstname:</label>
            <input type="text" name="firstname" class="form-control" value="@Model.firstname"/>
        </div>
        <div class="form-group col-md-4">
            <label>Lastname:</label>
            <input type="text" name="lastname" class="form-control" value="@Model.lastname"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>Email</label>
            <input type="email" name="patientemail" class="form-control" value="@Model.email"/>
        </div>
        <div class="form-group col-md-4">
            <label>Address</label>
            <input type="text" name="address" class="form-control" value="@Model.address"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>City</label>
            <input type="text" name="city" class="form-control"  value="@Model.city"/>
        </div>
        <div class="form-group col-md-4">
            <label>PostalCode</label>
            <input type="text" name="postalcode" class="form-control" value="@Model.postalcode"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>gender</label>
            <input type="radio" name="gender" value="male" value="@Model.gender"/>Male
            <input type="radio" name="gender" value="female" value="@Model.gender"/>Female
        </div>
        <div class="form-group col-md-4">
            <label>Phone Number</label>
            <input type="text" name="phonenumber" class="form-control" value="@Model.phone"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>DOB</label>
            <input type="text" name="dob" class="form-control" value="@Model.dob"/>
        </div>
        <div class="form-group col-md-4">
            <label>EmergencyContactName</label>
            <input type="text" name="emergencycontact" class="form-control" value="@Model.emergencycontactname"/>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-4">
            <label>EmergencyContactNumber</label>
            <input type="text" name="emergencynumber" class="form-control" value="@Model.emergencycontactnumber"/>
        </div>

    </div>

    <input type="submit" value="Edit Details" class="btn btn-primary" />
</form>

