@model HospitalProject.Models.ViewModels.UpdateNotification
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
<form method="post" action="/Notifications/Update/@Model.Notifications.id">
    <label>Headline</label>
    <input type="text" name="headline" value="@Model.Notifications.headline" />
    <label>Content</label>
    <input type="text" name="content" value="@Model.Notifications.content" />
    <label>type</label>
    <select name="type">
        @{
            foreach (var type in Model.types)
            {
                <option value="@type.id">@type.name</option>
            }
        }
    </select>
    <label for="active">Set Active: </label>
    @{
        if (Model.Notifications.active == 1)
        {
            <input type="checkbox" value="1" name="active" id="active" checked="true" />
        }
        else
        {
            <input type="checkbox" value="1" name="active" id="active" />
        }
    }


    <input type="submit" value="submit" />
</form>

