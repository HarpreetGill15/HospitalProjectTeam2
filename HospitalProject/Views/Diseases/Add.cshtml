@model List<HospitalProject.Models.Tips>
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Disease</h2>
<a href="/Diseases/List" class="btn btn-primary stretched-link">Back</a>

<form method="post" action="/Diseases/Add">
    <div class="form-row">
        <div class="form-group col-md-4">
            <!-- Enter disease name-->
            <label>Disease Name:</label>
            <input type="text" name="diseasename" class="form-control" />
        </div>
        <!-- Enter disease content-->
        <div class="form-group col-md-4">
            <label>Content</label>
            <input type="text" name="content" class="form-control" />
        </div>
    </div>
    <div class="form-group col-md-4">
        <label>Tips:</label>
        <select id="TipsID" type="text" name="TipsID">
            @{
                //list of tips will be given in dropdown for admin to choose from
                foreach (var tips in Model)
                {
                    <option value="@tips.TipID">@tips.TipName</option>

                }
            }
        </select>
    </div>

    <input type="submit" value="Add Disease" class="btn btn-primary" />
</form>

