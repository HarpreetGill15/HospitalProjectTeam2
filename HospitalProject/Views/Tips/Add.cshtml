
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div>
        <a href="/Tips/List" class="btn btn-primary stretched-link">Back</a>
    </div>
<h2>Add Tips for Diseases</h2>
<form method="post" action="/Tips/Add">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label>TipName:</label>
            <input type="text" name="tipname" class="form-control" />
        </div>
        <div class="form-group col-md-4">
            <label>Date:</label>
            <input type="text" name="tipdate" class="form-control" />
        </div>
    </div>
    <input type="submit" value="Add Tips" class="btn btn-primary" />
</form>

