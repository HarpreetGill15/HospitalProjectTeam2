@model List<HospitalProject.Models.Blog>
@{
    ViewBag.Title = "Blogs - Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
<h2 class="py-5 text-secondary">List of Blogs</h2>

<table class="table table-hover">
    <thead>
    <tr>
        <th class="text-center" scope="col">#</th>
        <th class="text-center" scope="col">Image</th>
        <th class="text-center" scope="col">Headline</th>
        <th class="text-center" scope="col">Article</th>
        <th class="text-center" scope="col" colspan="2">Action</th>
    </tr>
    </thead>
    <tbody class="my-5">
    @foreach (var blog in Model)
    {
        <tr>

            <th class="text-center" scope="row">@blog.Id</th>
            <td class=""><img src="https://picsum.photos/80/80" /></td>
                <td class="text-center">@blog.Title</td>
            @*Limit the number of characters in the body content to be displayed on the list *@
            <td class="text-center">@blog.Body.Substring(0,50)</td>
   
            <td class="text-center">
                <a href="" class="btn btn-primary">Update</a>
            </td>
            <td>
                <a href="" class="btn btn-secondary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

    </section>