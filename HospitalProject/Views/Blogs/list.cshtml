@model List<HospitalProject.Models.Blog>
@{
    ViewBag.Title = "News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <section class="container py-5">
        <h2 class="text-center text-secondary">News Feed</h2>

        <div class="row">
            @foreach (var blog in Model)
            {
                <div class="card mb-3">
                    <a href="Show.cshtml">
                        <img src="@blog.Image" class="bd-placeholder-img card-img-top" alt="Blog Image">
                        <div class="card-body">
                            <h5 class="card-title">@blog.Title</h5>
                            <p class="card-text">@blog.Body</p>
                            <p class="card-text"><small class="text-muted"></small></p>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>
